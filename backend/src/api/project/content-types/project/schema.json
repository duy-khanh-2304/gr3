{
  "kind": "collectionType",
  "collectionName": "projects",
  "info": {
    "singularName": "project",
    "pluralName": "projects",
    "displayName": "Project",
    "description": ""
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "url": {
      "type": "string"
    },
    "post_image": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "post_subtitle": {
      "type": "richtext",
      "required": true
    },
    "content": {
      "type": "dynamiczone",
      "components": [
        "content.information",
        "content.paragraph",
        "content.light-box"
      ],
      "required": true
    },
    "seen_time_array": {
      "type": "component",
      "repeatable": true,
      "component": "content.seen-array-time"
    },
    "comment": {
      "type": "component",
      "repeatable": true,
      "component": "content.comment"
    },
    "showCommunicationLink": {
      "type": "boolean",
      "default": true
    },
    "showCommentBox": {
      "type": "boolean",
      "default": false
    }
  }
}
